<div class="container">
	<div class="row">
		<div class="col-sm-12">
			<div class="work-filter">
					<a href="/work" class="active ">All</a>
				{{# each data.categories }}
				<a href="{{categoryUrl key}}" class="{{key}}">{{name}}</a>
				{{/each}}
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-12">
			<div class="grid-row work">
				{{# each data.work.results}}
				<div class="list-item {{categoryClasses categories}}">
					<a href="{{postUrl slug}}">
					{{#if image}}<img src="{{{cloudinaryUrl image width=350 height=196 crop='fit' }}}" class="img pull-right">{{/if}}
					<div class="list-item-overlay">
						<div class="list-item-title">
							<h2>{{{title}}}</h2>
							{{{content.brief}}}
						</div>
					</div>
					</a>
				</div>
				{{/each}}
			</div>
		</div>

	</div>
	{{>pagination}}
</div>
