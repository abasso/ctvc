<div class="container">
<div class="row">
  <div class="col-sm-12">
    <div class="grid-row people">
      {{# each data.people}}
      <div class="list-item">
        {{#if image}}<img src="{{{cloudinaryUrl image.image width=610 height=343 crop='lfill' }}}" class="img">{{/if}}
          <div class="list-item-title">
            <h2>{{{name}}}</h2>
            <h3>{{{position}}}</h3>
          </div>
          <div class="people-copy">
            {{{content.extended}}}
          </div>
          <a class="people-more-toggle" href="#">Show biography</a>
      </div>
      {{/each}}
    </div>
  </div>

</div>
</div>
