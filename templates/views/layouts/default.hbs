<script>

var showReelMarkup = '<div class="embed-player">{{{data.showreel}}}</div>'
{{#if data.item.hasEmbedVideo}}
var embedMarkup = '<div class="embed-player">{{{data.item.video}}}</div>'
{{/if}}
$.each($("a"), function() {
	if($(this).attr("target") !== undefined) {
		$(this).addClass("link-external");
	}
})
$('body').imagesLoaded( function() {
	// $("body").on({
	// 	"mouseenter": function() {
	// 		$("body").addClass("video-active")
	// 	},
	// 	"mouseleave": function() {
	// 		$("body").removeClass("video-active")
	// 	}
	// }, ".vjs-big-play-button")

	// let player = document.getElementsByTagName('video')[0]
	// if (player !== undefined) {
	// 	player.addEventListener('play', function(data) {
	// 		$("body").addClass("video-active")
	// 	}, true)
	// }
	var myPlayer = videojs("modal-video")

	$(".burger-menu-toggle").on({
		"click": function() {
			if ($(this).hasClass("is-active")) {
				$(this).removeClass("is-active")
				$(".nav").removeClass("show")
			} else {
				$(this).addClass("is-active")
				$(".nav").addClass("show")
			}
		}
	})

	$(".people-more-toggle").on({
		"click": function(e) {
			e.preventDefault();
			if ($(this).parent().children(".people-copy").hasClass("is-open")) {
				$(this).removeClass("active").html("Show biography");
				$(this).parent().children(".people-copy").removeClass("is-open")
			} else {
				$(this).addClass("active").html("Hide biography");
				$(this).parent().children(".people-copy").addClass("is-open")
			}
		}
	})

	$(".video-close").on({
		"click": function() {
			myPlayer.pause()
			$(".modal-player").hide().removeClass("embed-modal").children().show()
			$(".embed-player").remove()
		}
	})

	$(".filter-toggle").on({
		"click": function() {
			if ($(this).hasClass('open')) {
				$(this).removeClass("open")
				$(".work-filter").removeClass('show')

			} else {
				$(this).addClass("open")
				$(".work-filter").addClass('show')
			}
		}
	})

	$("body").on({
		"click": function() {
			if (_.isUndefined(embedMarkup)) {
				myPlayer.src($(this).attr("data-src"))
				myPlayer.ready(function() {
					myPlayer.play()
				})
			} else {
				$(".modal-player").children().hide();
				$(".modal-player").addClass("embed-modal").append(embedMarkup);
				$(".video-close").show();
			}

			$(".modal-player").fadeIn()
		},
		"mouseenter": function() {
			$(this).parent().addClass("focus").removeClass("blur")
		},
		"mouseleave": function() {
			$(this).parent().addClass("blur").removeClass("focus")
		}
	}, ".btn-play-video")

	$("body").on({
		"click": function(e) {
			$(".modal-player").children().hide();
			$(".modal-player").addClass("embed-modal").append(showReelMarkup);
			$(".video-close").show();
			$(".modal-player").fadeIn()
		},
		"mouseenter": function() {
			$(this).parent().addClass("focus").removeClass("blur")
		},
		"mouseleave": function() {
			$(this).parent().addClass("blur").removeClass("focus")
		}
	}, ".watch-show-reel")

	$(".work .list-item").on({
		"mouseenter": function() {
			$(this).addClass("focus").removeClass("blur")
		},
		"mouseleave": function() {
			$(this).addClass("blur").removeClass("focus")
		}
	})
	if($(".grid-row.work").length) {
		var elem = document.querySelector(".grid-row")
		var iso = new Isotope( ".grid-row", {
			itemSelector: '.list-item',
			layoutMode: 'fitRows',
		})
	}
	if($("body").hasClass("item") && $(".swiper-slide").length > 1) {
		var mySwiper = new Swiper ('.swiper-container', {
			loop: true,
			pagination: '.swiper-pagination',
			nextButton: '.swiper-button-next',
			prevButton: '.swiper-button-prev',
			paginationClickable: true
		})
	}
	if($("body").hasClass("homepage")) {
		var mySwiper = new Swiper ('.swiper-container', {
			loop: true,
			pagination: '.swiper-pagination',
			nextButton: '.swiper-button-next',
			prevButton: '.swiper-button-prev',
			paginationClickable: true,
			preloadImages: true,
			updateOnImagesReady: true,
			onImagesReady: function() {
				if($(window).width() > 1200) {
					var swiper = $(".swiper-wrapper")
					var offset = swiper.height()
					$(".offset").each( function(index, item) {
						$(item).css('top', offset)
					})
				}
			}
		});
		$(window).resize(function() {
			if($(window).width() > 1200) {
				var swiper = $(".swiper-wrapper")
				var offset = swiper.height()
				$(".offset").each( function(index, item) {
					$(item).css('top', offset)
				})
			} else {
				$(".offset").removeAttr("style")
			}
		})
	}


	var filterArray = []
	if($("body").hasClass("work")) {
		if(window.location.pathname !== "/work") {
			let pathArray = window.location.pathname.split("/")
			iso.arrange({
				filter: "." + pathArray[pathArray.length -1]
			})
			$(".work-filter.type a").removeClass("active")
			$(".work-filter.type a[data-filter=" + pathArray[pathArray.length -1] + "]").addClass("active")
		}

		$(".work-filter a").on("click", function(e) {
			e.preventDefault()
			_.each(filterArray, (arrayItem, index) => {
				_.each($(this).siblings(), function(sibling) {
					if (arrayItem === "." + $(sibling).attr("data-filter")) {
						filterArray.splice(index, 1)
					}
				})
			})

			if ($(this).hasClass("active") && !$(this).hasClass("all")) {
				$(this).removeClass("active")
				var filterKey = "all"
				$(this).siblings(".work-filter a[data-filter=all]").addClass("active")
				_.each(filterArray, (arrayItem, index) => {
					history.pushState({}, null, "/work")
					if (arrayItem === "." + $(this).attr("data-filter")) {
						filterArray.splice(index, 1)
					}
				})
			} else {
				if ($(this).parent().hasClass("type")) {
					if ($(this).hasClass("all")) {
						history.pushState({}, null, "/work")
					} else {
						history.pushState({}, null, "/work/" + $(this).attr("data-filter"))
					}
				}
				$(this).siblings().removeClass("active")
				$(this).addClass("active")
				filterArray.push("." + $(this).attr("data-filter"))
			}
			iso.arrange({
				filter: filterArray.join("")
			})
			if ($(".grid-row.work").css('height') === '0px') {
				$(".no-results").removeClass("hidden-xs-up")
			} else {
				$(".no-results").addClass("hidden-xs-up")
			}
		})
	}

})


</script>

