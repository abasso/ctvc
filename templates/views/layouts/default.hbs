<body class="{{section}} {{data.item.workType.key}} {{#if data.item.useCompactLayout}}compact-item{{/if}}">
	<div id="header">
		<div class="container">
			<div role="navigation" class="navbar navbar-default">
				<div class="navbar-header">
					<a href="/" class="navbar-brand">
						<img src="/images/logo.svg"/>
					</a>
				</div>
				<a class="burger-menu-toggle hidden-lg-up"><span>Menu</span></a>
				<nav class="nav">
					{{# each navLinks}}
					<div class="nav-item {{ class }}">
						<a {{#ifeq ../section key}}class="active {{#if subItems}}sub-menu-trigger{{/if}}" {{else}}class=" {{#if subItems}}sub-menu-trigger{{/if}}"{{/ifeq}} href="{{ href }}" {{#if src}}data-src="{{src}}"{{/if}}>{{ label }}</a>
						{{#if subItems}}
						<div class="sub-menu">
							{{#each subItems}}
							<a {{#ifeq ../section key}}class="active {{#if subItems}}sub-menu{{/if}} {{ class }}"{{else}}class=" {{#if subItems}}sub-menu{{/if}}{{ class }}"{{/ifeq}} href="{{ href }}" {{#if src}}data-src="{{src}}"{{/if}}>{{ label }}</a>
							{{/each}}
						</div>
						{{/if}}
					</div>
					{{/each}}
					<div class="social-links">
						{{# each socialLinks}}
						<a {{#ifeq ../section key}} class="active {{ class }}"{{else}}class="{{ class }}"{{/ifeq}} href="{{ href }}" target="_blank" >{{ label }}</a>
						{{/each}}
					</div>
				</nav>


